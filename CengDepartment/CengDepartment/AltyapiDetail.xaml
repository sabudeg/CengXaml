<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CengDepartment.AltyapiDetail">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" BackgroundColor="LightGray">
            <Image x:Name="RoomImage" Margin="0,50" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
            <Label x:Name="RoomName" Margin="20,20" FontSize="Large" HorizontalOptions="Center"/>
            <Label x:Name="RoomDetail" FontSize="Medium" HorizontalOptions="Center"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>